</DefaultLayout>

<style>
	a.email
	{
		display: block;
		font-size: 3rem;
		max-width: 24ch;
		max-width: max-content;
		background: linear-gradient(var(--bright-yellow), var(--bright-yellow));
		background-size: 100% 0.2em;
		background-repeat: no-repeat;
		background-position: bottom;
		transition: background-size 0.1s ease-out;
	}

	a.email:hover, a.email:focus
	{
		background-size: 100% 0.7em;
	}

	h2
	{
		font-size: 2rem;
		font-weight: normal;
		margin-top: 5rem;
	}

	ul
	{
		list-style: none;
		padding: 30px 0;
		display: flex;
		flex-direction: row;
		gap: 30px;
		align-items: center;
	}

	ul a svg
	{
		fill: none;
		stroke: var(--black);
		stroke-linecap: round;
		stroke-linejoin: round;
		stroke-width: 1px;
		transition: transform 0.1s ease;
	}

	ul a:hover svg
	{
		fill: var(--bright-yellow);
		transform: scale(1.1);
	}

	@media screen and (max-width: 560px)
	{
		:global(main)
		{
			text-align: center;
		}

		p
		{
			font-size: 1.3rem;
		}

		a.email
		{
			margin: auto;
			font-size: 4vw;
		}

		ul
		{
			justify-content: center;
		}

		ul a svg
		{
			width: 30px;
			height: 30px;
			stroke-width: 2px;
		}
	}
</style>