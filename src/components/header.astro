---
import Logo from './logo.astro'
---
<header>
	<Logo/>
	<nav>
		<a href="/films">Films</a>
		<a href="/about">About</a>
		<a href="/contact">Contact</a>
	</nav>
</header>

<style>
	header
	{
		height: 70px;
	}

	nav
	{
		float: right;
		display: flex;
		flex-direction: row;
		gap: 30px;
		padding-top: 30px;

		margin-right: 12vw;
		padding-right: 18px;
	}

	a
	{
		display: inline-block;
		font-size: 1.6rem;
		transition: transform 0.2s ease;
	}

	a::after
	{
		content: "";
		display: block;
		background: var(--bright-yellow);
		width: 0%;
		height: 16px;
		transform: translateY(-15px);
		z-index: -1;
		position: relative;
		transition: all 0.2s ease;
	}

	a:hover, a:focus
	{
		transform: translateY(-5px);
		outline: none;
	}

	a:hover::after, a:focus::after
	{
		width: 100%;
		transform: translateY(-10px);
	}

	header :global(img)
	{
		padding: 15px;
		width: 210px;
		height: 210px;
	}

	@media screen and (min-width: 1440px)
	{
		nav
		{
			margin-right: 172px;
		}
	}

	@media screen and (max-width: 760px)
	{
		header
		{
			height: auto;
		}

		nav
		{
			float: none;
			margin: 0;
			padding: 0;
			
  			justify-content: center;
			padding-top: 10px;
		}

		header :global(a)
		{
			display: block;
			text-align: center;
		}

		header :global(img)
		{
			padding: 5px;
			width: 70px;
			height: 70px;
		}
	}
</style>