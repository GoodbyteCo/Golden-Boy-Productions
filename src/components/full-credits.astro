---
const { data } = Astro.props
---

<style>
	dl
	{
		text-align: center;
		padding: 30px;
		max-width: 2040px;
		margin: 0 auto;
	}

	dt, dd, div
	{
		display: inline-block;
	}

	div
	{
		padding: 8px 0;
	}

	dt
	{
		font-size: 0.9rem;
		line-height: 1.4;
		word-spacing: 0;
		text-align: end;
		margin-inline-end: 10px;
		opacity: 0.7;
		width: min-content;
	}

	dd
	{
		font-family: -apple-system, BlinkMacSystemFont, Roboto, 'Helvetica Neue', sans-serif;
		font-size: 2.5rem;
		letter-spacing: -0.01em;
		line-height: 1.6;
		padding: 0;
		margin: 0;
		margin-inline-end: 30px;

		display: inline-block;
		transform: scaleY(1.3);
		transform-origin: 0 1em;
	}

	@media screen and (max-width: 575px)
	{
		dt, dd, div
		{
			max-width: 100%;
			width: auto;
			display: block;
			margin-inline-end: 0px;
			text-align: center;
			transform: none;
		}

		dt :global(br)
		{
			display: none;
		}
	}
</style>

<dl>
{
	data.map((credit) => Object.keys(credit)
		.map((title) => (
			<div>
				<dt>{title}</dt>
				{
					credit[title].map((name) => (
						<dd>{name}</dd>
					))
				}
			</div>
		))
	)
}
</dl>